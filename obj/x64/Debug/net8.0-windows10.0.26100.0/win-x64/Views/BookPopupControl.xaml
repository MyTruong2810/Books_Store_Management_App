<?xml version="1.0" encoding="utf-8"?>
<UserControl x:ConnectionId='1'
    x:Class="Books_Store_Management_App.BookPopupControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Books_Store_Management_App"
    xmlns:local1="using:Books_Store_Management_App.Helpers"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d">

    <UserControl.Resources>
        <local1:StringToVisibableConverter x:Key="toVisibableConverter" />
    </UserControl.Resources>


    <StackPanel x:ConnectionId='2' x:Name="rightDialog" Orientation="Vertical" HorizontalAlignment="Right" CornerRadius="25, 0, 0, 25" Background="#292C2D" Width="730">
        <RelativePanel Margin="25, 10, 25, 0" Padding="0, 0, 0, 10" BorderBrush="Gray" BorderThickness="0, 0, 0, 1">
            <TextBlock x:ConnectionId='25' x:Name="TitleTextBlock" FontWeight="SemiBold" FontSize="18" Text="Add New Book" Foreground="White" VerticalAlignment="Center"/>
            <Button x:ConnectionId='26' x:Name="xBtn" Content="X" Foreground="White" Margin="0,0,0,0" Width="25" Height="25" Padding="0" BorderThickness="0" VerticalAlignment="Center"
            RelativePanel.AlignRightWithPanel="True"
                                                  
                                                
                               >
                <Button.Background>
                    <SolidColorBrush Color="Gray"/>
                </Button.Background>
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Grid>
                            <Ellipse Fill="{TemplateBinding Background}" />
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Grid>
                    </ControlTemplate>
                </Button.Template>
            </Button>
        </RelativePanel>

        <Grid Margin="25, 10, 25, 0">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Vertical" VerticalAlignment="Center" Grid.Column="0" Grid.RowSpan="4">
                <Image x:ConnectionId='23' VerticalAlignment="Center"                                                      Width="158" Height="212" />
                <TextBlock x:ConnectionId='24' HorizontalAlignment="Center" Text="Change Icon" Foreground="#FAC1D9"                            Margin="0, 5, 0, 0" />
            </StackPanel>

            <StackPanel Orientation="Vertical" Grid.Column="1" HorizontalAlignment="Stretch">
                <TextBlock Text="Book Name" />
                <TextBox x:ConnectionId='21' x:Name="bookNameTextBox"                                              PlaceholderText="Enter book name" Margin="0, 10, 0, 0" HorizontalAlignment="Stretch"/>
                <TextBlock x:ConnectionId='22' 
                                                                             Foreground="Red" 
                                                                                                                                    />
            </StackPanel>

            <StackPanel Margin="0, 10, 0, 0" Orientation="Vertical" Grid.Column="1" Grid.Row="1" HorizontalAlignment="Stretch">
                <TextBlock Text="Author" />
                <TextBox x:ConnectionId='19' x:Name="authorTextBox"                                               PlaceholderText="Enter book's author" Margin="0, 10, 0, 0" HorizontalAlignment="Stretch"/>
                <TextBlock x:ConnectionId='20' 
                                                                              Foreground="Red" 
                                                                                                                                     />
            </StackPanel>

            <Grid Margin="0, 10, 0, 0" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="Publisher" />
                    <TextBox x:ConnectionId='17' x:Name="publisherTextBox"                                                  PlaceholderText="Enter book's publisher" Margin="0, 10, 0, 0" HorizontalAlignment="Stretch"/>
                    <TextBlock x:ConnectionId='18' 
                                                                                     Foreground="Red" 
                                                                                                                                            />
                </StackPanel>

                <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10, 0 , 0 , 0">
                    <TextBlock Text="ISBN" />
                    <TextBox x:ConnectionId='15' x:Name="isbnTextBox"                                             PlaceholderText="Enter book's isbn" Margin="0, 10, 0, 0" HorizontalAlignment="Stretch"
                            >
                    </TextBox>
                    <TextBlock x:ConnectionId='16' 
                                                                                 Foreground="Red" 
                                                                                                                                        />
                </StackPanel>
            </Grid>

            <Grid Margin="0, 10, 0, 0" Grid.Column="1" Grid.Row="3" HorizontalAlignment="Stretch">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="2*" />
                </Grid.ColumnDefinitions>

                <StackPanel Orientation="Vertical" Grid.Column="0">
                    <TextBlock Text="Year" />
                    <NumberBox x:ConnectionId='13' x:Name="yearTextBox"                                             PlaceholderText="2024" Margin="0, 10, 0, 0" HorizontalAlignment="Stretch"/>
                    <TextBlock x:ConnectionId='14' 
                                                                                Foreground="Red" 
                                                                                                                                       />
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10, 0 , 0 , 0">
                    <TextBlock Text="Classify" />
                    <ComboBox x:ConnectionId='12' x:Name="classifyComboBox"                                  SelectedIndex="0" PlaceholderText="Enter book name" Margin="0, 10, 0, 0" HorizontalAlignment="Stretch">

                    </ComboBox>
                </StackPanel>
            </Grid>

            <StackPanel Margin="0, 10, 0, 0" Orientation="Vertical" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Stretch">
                <Grid Margin="0, 10, 0, 0" Grid.Column="1" Grid.Row="2" HorizontalAlignment="Stretch">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>

                    <StackPanel Orientation="Vertical" Grid.Column="0">
                        <TextBlock Text="Selling Prices" />
                        <NumberBox x:ConnectionId='10' x:Name="sellingPricesTextBox"                                                       PlaceholderText="2024" Margin="0, 10, 0, 0" HorizontalAlignment="Stretch"/>
                        <TextBlock x:ConnectionId='11' 
                                                                                             Foreground="Red" 
                                                                                                                                                    />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Grid.Column="1" Margin="10, 0 , 0 , 0">
                        <TextBlock Text="Purchase Price" />
                        <NumberBox x:ConnectionId='8' x:Name="purchasePriceTextBox"                                                      PlaceholderText="2024" Margin="0, 10, 0, 0" HorizontalAlignment="Stretch"/>
                        <TextBlock x:ConnectionId='9' 
                                                                                             Foreground="Red" 
                                                                                                                                                    />
                    </StackPanel>

                    <StackPanel Orientation="Vertical" Grid.Column="2" Margin="10, 0 , 0 , 0">
                        <TextBlock Text="Quantities" />
                        <NumberBox x:ConnectionId='6' x:Name="quantityTextBox"                                                 PlaceholderText="2024" Margin="0, 10, 0, 0" HorizontalAlignment="Stretch"/>
                        <TextBlock x:ConnectionId='7' 
                                                                                         Foreground="Red" 
                                                                                                                                               />
                    </StackPanel>

                </Grid>
            </StackPanel>
        </Grid>

        <StackPanel  Margin="25, 10, 25, 0" Orientation="Vertical">
            <TextBlock Text="Description" FontSize="16" Margin="0,0,0,10"/>
            <TextBox x:ConnectionId='5' x:Name="desciptionTextBox" Height="100" AcceptsReturn="True" TextWrapping="Wrap" PlaceholderText="Enter your text here" />
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="25, 15, 25, 0" HorizontalAlignment="Right">
            <Button x:ConnectionId='3' Content="Cancel"                           />
            <Button x:ConnectionId='4' Margin="10, 0, 0, 0" Content="Save" x:Name="SaveBtn"                          Foreground="Black" Background="#8CB3ED" />
        </StackPanel>
    </StackPanel>
</UserControl>

