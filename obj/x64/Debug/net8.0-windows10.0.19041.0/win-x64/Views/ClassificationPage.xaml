<?xml version="1.0" encoding="utf-8"?>
<Page x:ConnectionId='1'
    x:Class="Books_Store_Management_App.Views.ClassificationPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:Books_Store_Management_App.Views"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:models="using:Books_Store_Management_App.Models"
    mc:Ignorable="d"
    Background="{ThemeResource ApplicationPageBackgroundThemeBrush}">

    <Page.Resources>
        <DataTemplate x:Key="HorizontalFormat"                                        >
            <StackPanel x:ConnectionId='3' Orientation="Horizontal" VerticalAlignment="Center"  Margin="5" BorderBrush="DarkCyan" Background="AntiqueWhite" CornerRadius="10">
                <StackPanel Orientation="Horizontal" Margin="5 0 0 0" Height="45" >
                    <TextBlock Width="100" Margin="10 0" Foreground="Blue" >ID: <Run x:ConnectionId='7'                    Foreground="Red"/></TextBlock>
                    <TextBlock Width="1000" Margin="5 0" Foreground="Gray">Name: <Run x:ConnectionId='6'                      Foreground="Blue" FontWeight="Bold"/></TextBlock>
                </StackPanel>
                <StackPanel Orientation="Horizontal">
                    <Button x:ConnectionId='4' Name="deleteButton"                                              Foreground="DarkBlue">
                        <FontIcon Glyph="&#xE74D;" />
                    </Button>
                    <Button x:ConnectionId='5' Name="updateButton"                                              Foreground="DarkBlue">
                        <FontIcon Glyph="&#xE70F;" />
                    </Button>
                </StackPanel>
            </StackPanel>
        </DataTemplate>
    </Page.Resources>

    <StackPanel Background="#FFFFE1">
        <StackPanel Orientation="Horizontal" VerticalAlignment="Center"  
                CornerRadius="20"
                BorderBrush="DarkBlue" BorderThickness="1" Background="#ADD9E6" 
                Padding="10 0 " Margin=" 10 10 10 20 ">
            <Button MaxWidth="50">
                <FontIcon Glyph="&#xE72B;" />
            </Button>
            <TextBlock FontSize="18" FontWeight="Bold" Text="ClassificationClass" Margin="10,10"/>
        </StackPanel>

        <StackPanel Margin="10" BorderBrush="DarkBlue" CornerRadius="15">
            <StackPanel Orientation="Horizontal" VerticalAlignment="Center" Background="#DDB989" Padding="10">
                <TextBlock Margin="10 0" VerticalAlignment="Center">Show</TextBlock>
                <ComboBox x:ConnectionId='25' x:Name="rowsPerPageComboBox" Height="30"                                                        >
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                            <Run Text="{Binding item}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <TextBox x:ConnectionId='26' Margin="100 0 5 0" HorizontalAlignment="Center" x:Name="keywordTextBox" Width="250" Height="30"/>

                <Button x:ConnectionId='27' Name="searchButton" Width="80" Height="30" Content="Search"                           />

                <TextBlock Margin="70 0 10 0" VerticalAlignment="Center" >Search by</TextBlock>

                <ComboBox x:ConnectionId='28' x:Name="filterSearchComboBox" Width="150"                                                      PlaceholderText="Search by...">
                    <TextBlock>ID</TextBlock>
                    <TextBlock>Tags</TextBlock>
                </ComboBox>

                <TextBlock Margin="20 0  10 0" VerticalAlignment="Center">Sort by</TextBlock>
                <ComboBox x:ConnectionId='29' x:Name="sortbyComboBox" Width="150"                                                    PlaceholderText="Sort by..." Margin="0 0 100 0">
                    <TextBlock>ID</TextBlock>
                    <TextBlock>Tags</TextBlock>
                </ComboBox>


                <Button x:ConnectionId='30'  Name="addButton" Width="60" HorizontalAlignment="Right" Height="30" Background="DarkBlue"                        >
                    <FontIcon Glyph="&#xE710;" DataContext="Add New ClassificationClass" />
                </Button>
            </StackPanel>
            <ScrollViewer VerticalScrollBarVisibility="Auto" HorizontalScrollBarVisibility="Auto" >
                <ListView x:ConnectionId='24' Name="CustomerComboBox" Background="AliceBlue" Height="570"
                                                                                                    
                      ItemTemplate="{StaticResource HorizontalFormat}">
                </ListView>
            </ScrollViewer>


            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" 
                    Background="DarkCyan" CornerRadius="10"
                    Padding="5" Margin="3">
                <Button x:ConnectionId='20' Name="previousButton" Background="GhostWhite"  Foreground="Red" Width="80" Height="30" Content="Previous"                          Margin="5"/>

                <ComboBox x:ConnectionId='21' x:Name="pagesComboBox" Background="GhostWhite" Foreground="Red"  Width="80" Height="30"                                                   Margin="5">
                    <ComboBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock>
                            <Run Text="{Binding Page}"/> / <Run Text="{Binding Total}"/>
                            </TextBlock>
                        </DataTemplate>
                    </ComboBox.ItemTemplate>
                </ComboBox>

                <Button x:ConnectionId='22' Name="nextButton" Background="GhostWhite"  Foreground="Red" Width="80" Height="30" Content="Next"                          Margin="5"/>
            </StackPanel>

            <TextBlock x:ConnectionId='16' Name="infoTextBlock" Foreground="Black" HorizontalAlignment="Right"  Margin="20 0">
            Displaying
            <Run x:ConnectionId='17'                                                                              /> /
            <Run x:ConnectionId='18'                                                               /> of total
            <Run x:ConnectionId='19'                                                              />
            </TextBlock>
        </StackPanel>

        <ContentDialog x:ConnectionId='8'
        x:Name="EditClassificationClassDialog"
        Title="Edit ClassificationClass Profile"
        PrimaryButtonText="Save"
        CloseButtonText="Cancel"
        DefaultButton="Primary"
        Background="Black">

            <StackPanel Width="700" Margin="0">
                <TextBox x:ConnectionId='14' VariableSizedWrapGrid.ColumnSpan="2" Header="ID" FontSize="11"                                                                                   PlaceholderText="ID"/>
                <TextBox x:ConnectionId='15' VariableSizedWrapGrid.ColumnSpan="1" Header="Tags" FontSize="11"                                                                                     PlaceholderText="Tags"/>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:ConnectionId='9'
        x:Name="AddClassificationClassDialog"
        Title="Add ClassificationClass Profile"
        PrimaryButtonText="Save"
        CloseButtonText="Cancel"
        DefaultButton="Primary"
        Background="Black">

            <StackPanel Width="700" Margin="0">
                <TextBox x:ConnectionId='12' VariableSizedWrapGrid.ColumnSpan="2" Header="ID" FontSize="11"                                                                                   PlaceholderText="ID"/>
                <TextBox x:ConnectionId='13' VariableSizedWrapGrid.ColumnSpan="1" Header="Tags" FontSize="11"                                                                                     PlaceholderText="Tags"/>
            </StackPanel>
        </ContentDialog>

        <ContentDialog x:ConnectionId='10'
        x:Name="DeleteClassificationClassDialog"
        Title="Delete ClassificationClass"
        PrimaryButtonText="Yes"
        CloseButtonText="No"
        DefaultButton="Primary"
        Background="Black">

            <StackPanel Width="500" Margin="0">
                <TextBlock x:ConnectionId='11'                                                                                  />
                <TextBlock>Do you want to delete this Classification?</TextBlock>
            </StackPanel>
        </ContentDialog>
    </StackPanel>
</Page>

